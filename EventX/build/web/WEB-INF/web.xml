        <servlet-name>loginchk</servlet-name>
        <url-pattern>/loginchk</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loginchk1</servlet-name>
        <servlet-class>login1</servlet-class>
    </servlet>
