        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>loginchk</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
